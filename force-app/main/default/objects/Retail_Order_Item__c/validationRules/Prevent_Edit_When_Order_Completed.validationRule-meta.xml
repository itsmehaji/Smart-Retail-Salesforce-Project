<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Prevent_Edit_When_Order_Completed</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
    NOT(ISNEW()),
    ISPICKVAL(Retail_Order__r.Status__c, &quot;Completed&quot;)
)</errorConditionFormula>
    <errorMessage>Cannot modify items when order is completed.</errorMessage>
</ValidationRule>
